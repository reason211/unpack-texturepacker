#!/usr/bin/env node
const commander = require('commander')
const enterFunction  = require('../src')
const version = require('../package.json').version

const { path, type, image, output, recursive, debug } = commander
  .version(version)
  .option('-p, --path <path>', 'plist or json path')
  .option('-t, --type <type>', 'support js,json,plist', /^(js|json|plist)$/i, 'json')
  .option('-i, --image <path>', 'source image path, Reading configuration files by default')
  .option('-o, --output <path>', 'output path, default [unpack-texturepacker]')
  .option('-r, --recursive', 'for directory recursive')
  .option('-d, --debug', 'show debug infomation')
  .on('--help', function () {
    console.log();
    console.log('  Examples:');
    console.log('    $ unpack-tp -p ./test/jsonorjs/js.js -d');
    console.log('    $ unpack-tp -p ./test/plist/conf.plist -d');
    console.log();
  })
  .parse(process.argv);

const config = { path, type, image, output, recursive, debug }
// enterFunction(config)